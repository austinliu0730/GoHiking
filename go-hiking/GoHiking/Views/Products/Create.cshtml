            // 更新集合時間
            document.getElementById('show-time').textContent = document.getElementById('modal-meeting-time').value;
            document.getElementById('hidden-meeting-time').value = document.getElementById('modal-meeting-time').value;
            // 更新集合地點
            document.getElementById('show-location').textContent = document.getElementById('modal-meeting-location').value;
            document.getElementById('hidden-meeting-location').value = document.getElementById('modal-meeting-location').value;
            // 更新價格
            document.getElementById('show-price').textContent = document.getElementById('modal-price').value;
            document.getElementById('hidden-price').value = document.getElementById('modal-price').value;

            var maxParticipants = document.getElementById('modal-max-participants').value;
            if (maxParticipants) {

                document.getElementById('show-max-participants-2').textContent = maxParticipants;
                document.getElementById('hidden-max-participants').value = maxParticipants;
            }
            // 關閉 Modal
            bootstrap.Modal.getInstance(document.getElementById('editModal')).hide();
        }

        // 團體資訊 Modal
        document.getElementById('teamInfoModal').addEventListener('show.bs.modal', function () {
            var groupName = document.getElementById('hidden-team-name').value || '';
            var leaderMessage = document.getElementById('hidden-leader-message').value || '';
            document.getElementById('modal-team-name').value = groupName;
            document.getElementById('modal-leader-message').value = leaderMessage;
        });

        // 儲存團體資訊
        function saveTeamInfo() {
            var groupName = document.getElementById('modal-team-name').value.trim();
            var leaderMessage = document.getElementById('modal-leader-message').value.trim();

            // 更新團名顯示
            var teamNameDisplay = document.getElementById('show-team-name');
            if (groupName) {
                teamNameDisplay.innerHTML = groupName;
                teamNameDisplay.classList.remove('text-muted');
            } else {
                teamNameDisplay.innerHTML = '<span class="text-muted">請設定團名</span>';
            }

            // 更新團長的話顯示
            var leaderMessageDisplay = document.getElementById('show-leader-message');
            if (leaderMessage) {
                var displayMessage = leaderMessage.replace(/\n/g, '<br/>');
                leaderMessageDisplay.innerHTML = '<p>' + displayMessage + '</p>';
                leaderMessageDisplay.classList.remove('text-muted');
            } else {
                leaderMessageDisplay.innerHTML = '<p class="text-muted">分享你對這次活動的想法，讓參與者更了解這次行程...</p>';
            }

            // 更新隱藏欄位
            document.getElementById('hidden-team-name').value = groupName;
            document.getElementById('hidden-leader-message').value = leaderMessage;

            // 關閉 Modal
            bootstrap.Modal.getInstance(document.getElementById('teamInfoModal')).hide();
        }

        // 簡易行程 Modal
        document.getElementById('scheduleModal').addEventListener('show.bs.modal', function () {
            var currentSchedule = document.getElementById('hidden-schedule').value || '';
            document.getElementById('modal-schedule').value = currentSchedule;
        });

        // 儲存簡易行程
        function saveSchedule() {
            var schedule = document.getElementById('modal-schedule').value;
            // 更新顯示內容
            var displaySchedule = schedule.replace(/\n/g, '<br/>');
            document.getElementById('show-schedule').innerHTML = '<p>' + displaySchedule + '</p>';
            // 更新隱藏欄位
            document.getElementById('hidden-schedule').value = schedule;
            // 關閉 Modal
            bootstrap.Modal.getInstance(document.getElementById('scheduleModal')).hide();
        }

        // 費用包含 Modal
        document.getElementById('feeModal').addEventListener('show.bs.modal', function () {
            // 先取消所有勾選
            document.querySelectorAll('#feeModal input[type="checkbox"]').forEach(cb => {
                cb.checked = false;
            });

            // 取得目前的費用項目
            var currentFees = document.querySelectorAll('#show-fees li');
            currentFees.forEach(fee => {
                var feeText = fee.textContent.trim();
                // 找到對應的 checkbox 並勾選
                document.querySelectorAll('#feeModal input[type="checkbox"]').forEach(cb => {
                    if (cb.value === feeText) {
                        cb.checked = true;
                    }
                });
            });
        });

        document.addEventListener('DOMContentLoaded', function() {
            // 從隱藏欄位取得已選的項目
            var selectedFees = '@Model.FeeIncludes'.split(',');

            // 勾選對應的 checkbox
            selectedFees.forEach(function(fee) {
                if (fee.trim()) {
                    var checkbox = document.querySelector('#feeModal input[value="' + fee.trim() + '"]');
                    if (checkbox) {
                        checkbox.checked = true;
                    }
                }
            });

            // 初始化顯示列表
            updateFeeDisplay();
        });
        function updateFeeDisplay() {
            var selectedFees = [];
            document.querySelectorAll('#feeModal input[type="checkbox"]:checked').forEach(cb => {
                selectedFees.push(cb.value);
            });

            var feesList = document.getElementById('show-fees');
            feesList.innerHTML = '';
            selectedFees.forEach(fee => {
                var li = document.createElement('li');
                li.textContent = fee;
                feesList.appendChild(li);
            });
        }


        // 儲存費用包含
        function saveFees() {
            var selectedFees = [];
            document.querySelectorAll('#feeModal input[type="checkbox"]:checked').forEach(cb => {
                selectedFees.push(cb.value);
            });

            // 更新顯示內容
            updateFeeDisplay();

            // 更新隱藏欄位（用逗號分隔）
            document.getElementById('hidden-fees').value = selectedFees.join(',');

            // 關閉 Modal
            bootstrap.Modal.getInstance(document.getElementById('feeModal')).hide();
        }


        // 確認成團提示
        document.getElementById('submit-btn').addEventListener('click', function () {
            Swal.fire({
                title: '確定要確認成團嗎？',
                text: '請確認所有資料都已填寫完成',
                icon: 'warning',
                showCancelButton: true,
                confirmButtonColor: '#28a745',
                cancelButtonColor: '#6c757d',
                confirmButtonText: '確定成團',
                cancelButtonText: '取消'
            }).then((result) => {
                if (result.isConfirmed) {
                    document.querySelector('form').submit();
                }
            });
        });


        var cropper = null;
        var currentFile = null;
        var currentImageIndex = 0; // 追蹤當前編輯的圖片索引
        var tempImageData = [null, null, null]; // 暫存三張圖片的資料

        // Modal 開啟時初始化
        document.getElementById('imageModal').addEventListener('show.bs.modal', function () {
            currentImageIndex = 0;
            loadCurrentImage();

            // 重設標籤狀態
            document.querySelectorAll('#imageTab .nav-link').forEach((tab, index) => {
                tab.classList.toggle('active', index === 0);
            });
        });

        // 切換圖片標籤
        function switchImageTab(index) {
            // 先儲存當前的變更（如果有的話）
            if (cropper) {
                saveTempImage();
            }

            currentImageIndex = index;
            loadCurrentImage();
            destroyCropper();

            // 清空檔案選擇
            document.getElementById('image-upload').value = '';
        }

        // 載入當前圖片
        function loadCurrentImage() {
            var currentImage = document.getElementById('product-image-' + currentImageIndex);
            if (currentImage) {
                document.getElementById('current-image-preview').src = currentImage.src;
            }
        }

        // 圖片選擇處理
        document.getElementById('image-upload').addEventListener('change', function (e) {
            var files = e.target.files;

            if (files && files.length > 0) {
                currentFile = files[0];

                // 檢查檔案類型
                if (!currentFile.type.startsWith('image/')) {
                    Swal.fire('錯誤', '請選擇圖片檔案', 'error');
                    return;
                }

                // 檢查檔案大小（例如限制 10MB）
                if (currentFile.size > 10 * 1024 * 1024) {
                    Swal.fire('錯誤', '圖片大小不能超過 10MB', 'error');
                    return;
                }

                var reader = new FileReader();
                reader.onload = function (e) {
                    // 顯示裁切區域
                    document.querySelector('.crop-container').style.display = 'block';
                    document.getElementById('preview-container').style.display = 'block';
                    document.getElementById('crop-btn').style.display = 'inline-block';

                    // 設定圖片
                    var image = document.getElementById('image-to-crop');
                    image.src = e.target.result;

                    // 如果已有 cropper，先銷毀
                    if (cropper) {
                        cropper.destroy();
                    }

                    // 初始化 Cropper
                    cropper = new Cropper(image, {
                        aspectRatio: 900 / 536,  // 固定比例
                        viewMode: 1,
                        dragMode: 'move',
                        autoCropArea: 1,
                        restore: false,
                        guides: true,
                        center: true,
                        highlight: false,
                        cropBoxMovable: true,
                        cropBoxResizable: true,
                        toggleDragModeOnDblclick: false,
                        //preview: '#preview-image',
                        crop: function (event) {
                            // 即時預覽
                            var canvas = cropper.getCroppedCanvas({
                                width: 900,
                                height: 536
                            });

                            if (canvas) {
                                document.getElementById('preview-image').src = canvas.toDataURL();
                            }
                        }
                    });
                };
                reader.readAsDataURL(currentFile);
            }
        });

        // 裁切並暫存當前圖片
        function cropImage() {
            if (!cropper) {
                Swal.fire('錯誤', '請先選擇圖片', 'error');
                return;
            }

            // 取得裁切後的 canvas
            var canvas = cropper.getCroppedCanvas({
                width: 900,
                height: 536,
                imageSmoothingEnabled: true,
                imageSmoothingQuality: 'high'
            });

            // 轉換為 Blob
            canvas.toBlob(function (blob) {
                // 建立新的 File 物件
                var croppedFile = new File([blob], 'image_' + currentImageIndex + '.jpg', {
                    type: 'image/jpeg',
                    lastModified: Date.now()
                });

                // 暫存檔案資料
                tempImageData[currentImageIndex] = croppedFile;

                // 更新預覽
                var reader = new FileReader();
                reader.onload = function (e) {
                    document.getElementById('product-image-' + currentImageIndex).src = e.target.result;
                    document.getElementById('current-image-preview').src = e.target.result;
                };
                reader.readAsDataURL(croppedFile);

                // 顯示成功訊息
                Swal.fire({
                    icon: 'success',
                    title: '圖片已裁切',
                    text: '圖片 ' + (currentImageIndex + 1) + ' 已準備好',
                    timer: 1500,
                    showConfirmButton: false
                });

                // 清理裁切器
                destroyCropper();
                document.getElementById('image-upload').value = '';

            }, 'image/jpeg', 0.9);
        }

        // 暫存當前圖片（不裁切）
        function saveTempImage() {
            if (cropper) {
                cropImage();
            }
        }

        // 清除當前圖片
        function clearCurrentImage() {
            // 恢復預設圖片
            var defaultImages = [
                'https://images.unsplash.com/photo-1506905925346-21bda4d32df4?w=900&h=400&fit=crop&crop=center',
                'https://images.unsplash.com/photo-1502085671122-2d218cd434e6?q=80&w=1526&auto=format&fit=crop&crop=center',
                'https://images.unsplash.com/photo-1501854140801-50d01698950b?q=80&w=1840'
            ];

            document.getElementById('product-image-' + currentImageIndex).src = defaultImages[currentImageIndex];
            document.getElementById('current-image-preview').src = defaultImages[currentImageIndex];
            tempImageData[currentImageIndex] = null;

            Swal.fire({
                icon: 'info',
                title: '已清除',
                text: '圖片 ' + (currentImageIndex + 1) + ' 已恢復預設',
                timer: 1500,
                showConfirmButton: false
            });
        }

        function saveAllImages() {
            // 建立一個新的 FileList
            var dt = new DataTransfer();
            var actualCount = 0;

            // 將所有圖片加入
            for (let i = 0; i < 3; i++) {
                if (tempImageData[i]) {
                    dt.items.add(tempImageData[i]);
                    actualCount++;
                }
            }

            // 嘗試設定 files（如果瀏覽器支援）
            var fileInput = document.getElementById('ImageFiles');
            if (dt.files.length > 0) {
                try {
                    fileInput.files = dt.files;
                } catch (e) {
                    // 如果不支援直接設定，使用替代方案
                    console.error('瀏覽器不支援直接設定 files，請使用 FormData 方案');
                }
            }

            // 顯示成功訊息
            Swal.fire({
                icon: 'success',
                title: '編輯完成',
                text: actualCount > 0 ? `已更新 ${actualCount} 張圖片` : '未選擇任何圖片',
                timer: 1500,
                showConfirmButton: false
            });

            bootstrap.Modal.getInstance(document.getElementById('imageModal')).hide();
            destroyCropper();
        }



        // 銷毀 Cropper
        function destroyCropper() {
            if (cropper) {
                cropper.destroy();
                cropper = null;
            }

            // 重置表單
            document.getElementById('image-upload').value = '';
            document.querySelector('.crop-container').style.display = 'none';
            document.getElementById('preview-container').style.display = 'none';
            document.getElementById('crop-btn').style.display = 'none';
        }

        // Modal 關閉時清理
        document.getElementById('imageModal').addEventListener('hidden.bs.modal', function () {
            destroyCropper();
            tempImageData = [null, null, null]; // 清空暫存
        });
    </script>

